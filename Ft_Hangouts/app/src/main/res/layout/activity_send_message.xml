<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tvisenti.ft_hangouts.SendMessage">

    <ListView
        android:layout_width="304dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/sendMessageButton"
        android:stackFromBottom="true"
        android:transcriptMode="normal"
        android:id="@+id/messageListView" />

    <Button
        android:id="@+id/sendMessageButton"
        android:layout_width="82dp"
        android:layout_height="39dp"
        android:text="@string/messageSendButton"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="404dp" />

    <EditText
        android:id="@+id/messageEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sendMessageButton"
        app:layout_constraintTop_toBottomOf="@+id/messageListView" />
</android.support.constraint.ConstraintLayout>
